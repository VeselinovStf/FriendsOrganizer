<Window x:Class="FriendsOrganizer.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FriendsOrganizer.UI.Views"
        xmlns:views="clr-namespace:FriendsOrganizer.UI.Views"
        mc:Ignorable="d"
        Title="Friends Organizer" 
        Height="450"
        Width="600"
        FontSize="20">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <views:NavigationUserControl DataContext="{Binding NavigationViewModel}"/>
        <views:FriendDetailUserControl 
            Grid.Column="1"
            DataContext="{Binding FriendDetailViewModel}"/>
        
    </Grid>
</Window>
